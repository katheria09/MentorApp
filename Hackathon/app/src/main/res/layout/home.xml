<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/navImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="@dimen/margin_10dp"
                android:src="@drawable/model" />

            <com.logicturtle.hackathon.Model.MentorBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/navImage"
                android:text="Jonathan Doe"
                android:textAlignment="center"
                android:textSize="20sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/margin_10dp"
            android:id="@+id/linear_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:src="@drawable/ic_location_24dp" />

                <com.logicturtle.hackathon.Model.MentorLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:padding="5dp"
                    android:text="Home"
                    android:textSize="@dimen/textSize_20" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:tint="@color/black"
                    android:src="@drawable/ic_drawer_profile" />

                <com.logicturtle.hackathon.Model.MentorLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:padding="5dp"
                    android:text="My Profile"
                    android:textSize="@dimen/textSize_20" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:src="@drawable/ic_mentor_24dp" />

                <com.logicturtle.hackathon.Model.MentorLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:padding="5dp"
                    android:text="Get Mentors"
                    android:textSize="@dimen/textSize_20" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/invites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:src="@drawable/ic_email_24dp" />

                <com.logicturtle.hackathon.Model.MentorLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:padding="5dp"
                    android:text="Invites"
                    android:textSize="@dimen/textSize_20" />

            </LinearLayout>


            <!--<LinearLayout-->
            <!--android:id="@+id/notification"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<ImageView-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="24dp"-->
            <!--android:layout_marginRight="@dimen/margin_10dp"-->
            <!--android:layout_marginTop="@dimen/margin_20dp"-->
            <!--android:paddingBottom="@dimen/margin_5dp"-->
            <!--android:paddingTop="@dimen/margin_5dp"-->
            <!--android:src="@drawable/ic_chat_24dp" />-->

            <!--<hackathonayush.mentor.Model.MentorLightTextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="@dimen/margin_30dp"-->
            <!--android:layout_marginTop="@dimen/margin_20dp"-->
            <!--android:padding="5dp"-->
            <!--android:text="Notifications"-->
            <!--android:textSize="@dimen/textSize_20" />-->

            <!--</LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@color/black" />

            <LinearLayout
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:src="@drawable/ic_share_24dp" />

                <com.logicturtle.hackathon.Model.MentorLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:padding="5dp"
                    android:text="Terms And Conditions"
                    android:textSize="@dimen/textSize_20" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:src="@drawable/ic_share_24dp" />

                <com.logicturtle.hackathon.Model.MentorLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:padding="5dp"
                    android:text="Share App"
                    android:textSize="@dimen/textSize_20" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:paddingBottom="@dimen/margin_5dp"
                    android:paddingTop="@dimen/margin_5dp"
                    android:tint="@color/black"
                    android:src="@drawable/logout" />

                <com.logicturtle.hackathon.Model.MentorLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:padding="5dp"
                    android:text="Log Out"
                    android:textSize="@dimen/textSize_20" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>

